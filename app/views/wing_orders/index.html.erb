<h1>Wing Orders</h1>

<div class=".wing_orders">
<%  @wing_orders.each do |wing_order| %>
  <div class=".wing_order">
    <h2><%= wing_order.customer_name %></h2>
    <span><%= wing_order.city %></span>
    <span>Quantity: <%= wing_order.quantity %></span>
    <span>Include Ranch Dressing? <%= wing_order.ranch_dressing ? "Yes" : "No" %></span>
  </div>
  <hr />
<% end %>
</div>

<%= link_to "New Order", new_wing_order_path %>
